<?xml version="1.0" encoding="utf-8" ?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.davidadamojr.android.keepintouch">

    <application android:allowBackup="true" android:label="@string/app_name"
        android:icon="@drawable/ic_launcher" android:theme="@style/Theme.AppCompat.Light.DarkActionBar">

        <activity android:name=".ui.ReminderListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.ContactListActivity"
            android:label="CriminalIntent">
        </activity>
        <receiver
            android:name="com.davidadamojr.android.keepintouch.core.ReminderAlarmReceiver"
            android:enabled="true" >
        </receiver>
        <service android:enabled="true"
            android:name="com.davidadamojr.android.keepintouch.core.ReminderService">

        </service>
    </application>

    <uses-permission android:name="android.permission.READ_CONTACTS" />

</manifest>
